{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/pages/*": ["pages/*"],
      "@/utils/*": ["utils/*"],
      "@/data/*": ["data/*"]
    }
  },
  "include": ["**/*.ts", "**/*.json", "eslint.config.js", "playwright.config.ts"],
  "exclude": ["node_modules", "test-results", "playwright-report"]
}
